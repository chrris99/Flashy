<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_selected="false">
        <shape android:shape="rectangle">

            <gradient
                android:angle="0"
                android:startColor="@color/colorItem2Start"
                android:endColor="@color/colorItem2End"/>
            <corners android:radius="10dp"/>

        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">

            <gradient
                android:angle="0"
                android:startColor="@color/colorItem2StartSelected"
                android:endColor="@color/colorItem2EndSelected"/>
            <corners android:radius="10dp"/>

        </shape>
    </item>

</selector>